<?xml version="1.0"?>
<ruleset name="Custom PHP_CodeSniffer Ruleset">
    <!-- Adja meg a projekt szabályainak nevét -->
    <description>Custom rules for PHP_CodeSniffer</description>

    <!-- Alapértelmezett szabvány, pl. PSR12 -->
    <rule ref="PSR12" />

    <!-- Tiltott szabályok (kikapcsolás) -->
    <exclude name="Generic.Formatting.MultipleStatementAlignment" />
    <exclude name="Generic.Formatting.SpaceAfterCast" />

    <!-- Új szabályok -->
    <rule ref="Generic.Files.LineLength">
        <!-- Maximális sorhossz 120 karakter -->
        <properties>
            <property name="lineLength" value="120" />
            <property name="absoluteLineLimit" value="140" />
        </properties>
    </rule>

    <!-- Egyéni szabályok hozzáadása -->
    <rule ref="Generic.Functions.FunctionCallArgumentSpacing">
        <properties>
            <property name="maxSpacing" value="1" />
        </properties>
    </rule>

    <!-- Fájlok kizárása (pl. vendor mappa) -->
    <exclude-pattern>*/vendor/*</exclude-pattern>

    <!-- Ellenőrzendő fájlok -->
    <file>test.php</file>
    <file>functions.php</file>
    
    <!-- Értesítés konfigurációk -->
    <report>
        <property name="showProgress" value="true" />
        <property name="fullReport" value="true" />
    </report>
</ruleset>
